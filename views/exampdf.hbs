    display: flex;
    flex-direction: column;
    background: #fff;
    padding: 10px;
    font-size: 16px;
    padding: 10px 50px;
    }
    .m-score {
    flex: 1;
    text-align: center;
    font-size: 48px;
    color: #ff9900;
    font-weight: 600;
    }
    .m-hd {
    display: flex;
    flex-direction: row;
    padding: 20px 0 5px 10px;
    }
    .m-result {
        position: relative;
    }
    .m-result .index {
    position: absolute;
    top: 20px;
    left: -32px;
    background: #ff6600;
    width: 24px;
    height: 24px;
    border-radius: 12px;
    color: #666;
    text-align: center;
    line-height: 1.5;
    font-family: "microsoft yahei";
    color: #fff;
    }

    .m-result .title {
    flex: 1;
    font-size: 16px;
    font-weight: 600;
    color: #666;
